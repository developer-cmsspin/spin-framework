@model MemberDocument
@using Spin.Base.Documentation.Entity
@using Spin.Base.Documentation.Language
@{

}

@if (Model.Examples != null && Model.Examples.Count > 0)
{
    foreach (var ItemExample in Model.Examples)
    {
        if (!String.IsNullOrEmpty(ItemExample?.Code))
        {
            <div class="content-information">
                <h2>@DocumentationLanguage.Example</h2>
                <div>
                    <div>
                        @Html.Raw(ItemExample.GetTranslate(a => a.Summary))
                    </div>
                    <div class="sample-section">
                        <div class="d-flex bd-highlight mb-3 title-sample">
                            <div class="p-2 bd-highlight">
                                C#
                            </div>
                            <div class="ml-auto bd-highlight content-copy">
                                <button id="copyInstance" class="btn-copy" type="button">
                                    <div class="p-2 copy-code">
                                        <i class="far fa-copy"></i>
                                        @DocumentationLanguage.Copy
                                    </div>
                                    <div class="p-2 copied-code">
                                        <i class="fas fa-check"></i>
                                    </div>
                                </button>
                            </div>
                        </div>
                        <div>
                            <div id="codeInstance" class="area-code">@(Html.Raw(ItemExample.Code))</div>
                            <div>
                                <pre><code class="cs">@(Html.Raw(ItemExample.Code))</code></pre>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}